<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="uz.unidev.timetable.presentation.main.group.GroupScreen"
        android:label="HomeScreen"
        tools:layout="@layout/screen_home">
        <action
            android:id="@+id/action_homeScreen_to_weekScreen"
            app:destination="@id/weekScreen" />
    </fragment>
    <fragment
        android:id="@+id/profileScreen"
        android:name="uz.unidev.timetable.presentation.main.profile.ProfileScreen"
        android:label="ProfileScreen"
        tools:layout="@layout/screen_profile">
        <action
            android:id="@+id/action_profileScreen_to_editProfileScreen"
            app:destination="@id/editProfileScreen" />
    </fragment>
    <fragment
        android:id="@+id/teacherScreen"
        android:name="uz.unidev.timetable.presentation.main.teacher.TeacherScreen"
        android:label="TeacherScreen"
        tools:layout="@layout/screen_teacher" />
    <fragment
        android:id="@+id/editProfileScreen"
        android:name="uz.unidev.timetable.presentation.main.profile.edit.EditProfileScreen"
        android:label="EditProfileScreen"
        tools:layout="@layout/screen_edit_profile" />
    <fragment
        android:id="@+id/weekScreen"
        android:name="uz.unidev.timetable.presentation.main.weeks.WeekScreen"
        android:label="WeekScreen"
        tools:layout="@layout/screen_week">
        <argument
            android:name="group_data"
            app:argType="uz.unidev.timetable.data.models.GroupData" />
        <action
            android:id="@+id/action_weekScreen_to_daysScreen"
            app:destination="@id/daysScreen" />
    </fragment>
    <fragment
        android:id="@+id/daysScreen"
        android:name="uz.unidev.timetable.presentation.main.lessons.DaysScreen"
        android:label="DaysScreen"
        tools:layout="@layout/screen_days"
        >
        <argument
            android:name="groupId"
            app:argType="string"
            android:defaultValue='""' />
        <argument
            android:name="week_data"
            app:argType="uz.unidev.timetable.data.models.WeekData" />
        <action
            android:id="@+id/action_daysScreen_to_lessonScreen"
            app:destination="@id/lessonScreen" />
    </fragment>
    <fragment
        android:id="@+id/lessonScreen"
        android:name="uz.unidev.timetable.presentation.main.lessons.lesson.LessonScreen"
        android:label="LessonScreen"
        tools:layout="@layout/screen_lesson"
        >
        <argument
            android:name="groupId"
            app:argType="string"
            android:defaultValue='""' />
        <argument
            android:name="weekId"
            app:argType="string"
            android:defaultValue='""' />
    </fragment>
</navigation>