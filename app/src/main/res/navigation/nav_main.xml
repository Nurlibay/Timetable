<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeScreen">

    <fragment
        android:id="@+id/homeScreen"
        android:name="uz.unidev.timetable.presentation.main.group.GroupScreen"
        android:label="HomeScreen"
        tools:layout="@layout/screen_home" >
        <action
            android:id="@+id/action_homeScreen_to_weeksScreen"
            app:destination="@id/weeksScreen" />
    </fragment>
    <fragment
        android:id="@+id/profileScreen"
        android:name="uz.unidev.timetable.presentation.main.profile.ProfileScreen"
        android:label="ProfileScreen"
        tools:layout="@layout/screen_profile" >
        <action
            android:id="@+id/action_profileScreen_to_editProfileScreen"
            app:destination="@id/editProfileScreen" />
    </fragment>
    <fragment
        android:id="@+id/teacherScreen"
        android:name="uz.unidev.timetable.presentation.main.teacher.TeacherScreen"
        android:label="TeacherScreen"
        tools:layout="@layout/screen_teacher" />
    <fragment
        android:id="@+id/editProfileScreen"
        android:name="uz.unidev.timetable.presentation.main.profile.edit.EditProfileScreen"
        android:label="EditProfileScreen"
        tools:layout="@layout/screen_edit_profile"
        />
    <fragment
        android:id="@+id/weeksScreen"
        android:name="uz.unidev.timetable.presentation.main.weeks.WeeksScreen"
        android:label="WeeksScreen" >
        <argument
            android:name="group_data"
            app:argType="uz.unidev.timetable.data.models.GroupData" />
    </fragment>
    <fragment
        android:id="@+id/week2Screen"
        android:name="uz.unidev.timetable.presentation.main.weeks.week2.Week2Screen"
        android:label="Week2Screen" />
    <fragment
        android:id="@+id/week1Screen"
        android:name="uz.unidev.timetable.presentation.main.weeks.week1.Week1Screen"
        android:label="Week1Screen" />
    <fragment
        android:id="@+id/week3Screen"
        android:name="uz.unidev.timetable.presentation.main.weeks.week3.Week3Screen"
        android:label="Week3Screen" />
    <fragment
        android:id="@+id/week4Screen"
        android:name="uz.unidev.timetable.presentation.main.weeks.week4.Week4Screen"
        android:label="Week4Screen" />
</navigation>